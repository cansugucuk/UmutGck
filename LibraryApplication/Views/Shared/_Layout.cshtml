<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                   
                </button>
                @Html.ActionLink("Kütüphane Otomasyonu", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Anasayfa", "Home", "Home")</li>
                    <li>@Html.ActionLink("Kitaplar", "Index", "Books")</li>
                    <li>@Html.ActionLink("Ödünç Alınan Kitaplar", "Index", "Borrows")</li>
                    <li>@Html.ActionLink("Kullanıcı", "Index", "Users")</li>
                    <li>@Html.ActionLink("Kategori", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Yazar", "Index", "Authors")</li>
                    <li>@Html.ActionLink("Dersler", "Index", "tb_Lesson")</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admins")</li>
                    <li>@Html.ActionLink("Kullanıcı Tip", "Index", "UserTypes")</li>

                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div style="text-align: center;">©️ 2021 Kütüphane Otomasyonu - Umut Gücük</div> 
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
