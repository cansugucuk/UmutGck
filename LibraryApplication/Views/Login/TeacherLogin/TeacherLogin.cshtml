@model LibraryApplication.DbModel.Entity.Teacher

    @{
        Layout = null;
    }

    <!DOCTYPE html>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min"></script>
    <!------ Include the above in your HEAD tag ---------->
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #17a2b8;
            height: 100vh;
        }

        #login .container #login-row #login-column #login-box {
            margin-top: 120px;
            max-width: 600px;
            height: 320px;
            border: 1px solid #9C9C9C;
            background-color: #EAEAEA;
        }

            #login .container #login-row #login-column #login-box #login-form {
                padding: 20px;
            }

                #login .container #login-row #login-column #login-box #login-form #register-link {
                    margin-top: -85px;
                }
    </style>
    <body>

        @using (Html.BeginForm())

        {

            <div id="login">
                <h3 class="text-center text-white pt-5"></h3>
                <div class="container">
                    <div id="login-row" class="row justify-content-center align-items-center">
                        <div id="login-column" class="col-md-6">
                            <div id="login-box" class="col-md-12">
                                <form id="login-form" class="form" action="" method="post">
                                    <h3 class="text-center text-info">Öğretmen Giriş Yap</h3>
                                    <div class="form-group">
                                        <label for="username" class="text-info">Kullanıcı Adı:</label><br>
                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="text-info">Şifre:</label><br>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                    <div class="form-group">

                                        <input type="submit" value="Giriş Yap" class="w3-btn w3-white w3-border w3-border-red w3-round-large" />

                                    </div>
                                    <div id="register-link" class="text-right">
                                        <input type="button" value="Öğretmen Kayıt Ol"  class="w3-btn w3-white w3-border w3-border-red w3-round-large" onclick="location.href='@Url.Action("Create", "Teachers")'" />
                                    </div>
                                    <div class="spinner-border text-muted"></div>
                                    <div class="spinner-border text-primary"></div>
                                    <div class="spinner-border text-success"></div>
                                    <div class="spinner-border text-info"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }


    </body>